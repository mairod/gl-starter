@import url('https://fonts.googleapis.com/css?family=Montserrat:500');

html
    overflow hidden

:root
   --app-height: 100%;

html
    overflow hidden
    &.no-cursor
        *
            cursor none !important

html,body
    overflow hidden

body
    background-color: white
    padding: 0
    margin: 0
    height 100vh
    width: 100%
    position: fixed
    @media not all and (hover:hover)
        height: var(--app-height)

h1
    font-family sans-serif
    color #262626
    font-size 4em
    margin 150px 0 0 150px

.fps
    top 0
    left 0
    transform-origin: top left
    transform: scale(.7)

#container
    position: fixed
    top 0
    left 0
    width: 100%
    height 100%
    transition: background-color 1.2s ease

    canvas
        opacity 1
        transition: opacity .3s ease

        &.hidden
            opacity 0

    video
        position: absolute
        top 0
        left: 0
        width 100%
        height: 100%
        z-index: -1
        // opacity: .2


.section
    position: absolute
    min-height: 100vh
    width 100%

iframe
    position fixed
    z-index 100
    bottom 0
    left 0

a
    position fixed
    display: block
    bottom 30px
    left 30px
    width: 200px
    border: 1px solid #262626
    color: #262626
    padding: 15px 0px
    text-decoration: none 
    text-align: center
    border-radius: 100px
    transition: all .4s ease
    &:hover
        color: white
        border-color: white

.anim-letter-weight
    &.hidden
        span.letter
            opacity 0
            transform: translate(-10px,0)
            font-variation-settings: 'wght' 100, 'slnt' 0
    span.word
        display: inline-block
    span.letter
            display: inline-block
            font-variation-settings: 'wght' 900, 'slnt' 0
            transition: opacity .3s ease, transform .8s ease, font-variation-settings 1s ease

.anim-letter
    &.hidden
        span.letter
            opacity 0
            transform: translate3d(0,50px, 0)
            transition-delay: 0s !important
    span.word
        display: inline-block
    span.letter
            display: inline-block
            transition: opacity .5s ease, transform .7s ease
            transform-origin: 0% 0%
            will-change: opacity, transform

.anim-letter-hover
    &.hidden
        span.letter
            opacity 0
            transform: translate(-10px,0)
    span.word
        display: inline-block
    span.letter
            display: inline-block
            transition: opacity .2s ease 1.2s, transform .3s ease 1.2s

@media (max-width: 640px) {
    a {
        left 50%
        margin-left: -100px
    }
}


